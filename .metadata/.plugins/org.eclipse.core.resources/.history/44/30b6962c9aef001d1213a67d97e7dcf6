<script>

// 랜덤 발생 (1~100)
rand = parseInt(Math.random() * 100 + 1);
count = 0;
inputs = "";	// 입력한 값들을 문자열로 누적시키는 변수

proc1 = () => {
	
	// 입력한 값 가져오기 -> id가 runm인 요소에 접근 -> 값 가져오기 -> value
	numvalue = parseInt(document.querySelector('#rnum').value);
	count ++;
	inputs += numvalue + " ";
	
	// 비교
	if(numvalue == rand) {
		str = `랜덤 : ${rand} <br>`;
		str += `입력값들 : ${inputs} <br>`;
		str += `입력횟수 : ${count} <br>`;
		str += "정답입니다!"
	} else if (numvalue > rand) {
		str = "힌트: 더 작은 수를 입력하세요."
	} else {
		str = "힌트: 더 큰 수를 입력하세요."
	}
	
	// 출력
	document.querySelector('#result1').innerHTML = str;
}


arr = ["가위", "바위", "보"];
proc2 = () => {
	
	vrand = parseInt(Math.random() * 3);
	
	com = arr[vrand];
	
	user = prompt("가위바위보 입력하세요");
	
	
	// 비교
	if(com == user) {
		res = "비겼습니다"
	} else if(user == "가위" && com == "보"
			|| user == "바위" && com == "가위"
			|| user == "보" && com == "바위") {
		res = "유저가 이겼습니다"
	} else {
		res = "컴퓨터가 이겼습니다"
	}
	
	// 출력
	str = `user : ${user} <br>`
	str += `com : ${com} <br>`
	str += `결과 : ${res} <br>`
	
	document.querySelector('#result2').innerHTML = str;
	
}

