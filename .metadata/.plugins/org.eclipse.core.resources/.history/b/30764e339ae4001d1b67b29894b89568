<script>
function add() {
	// 글자를 .dv3에 추가한다
	// 글자를 text object로 생성해야 한다
	
	vtext = document.createTextNode('hello');
	
	// .dv3 요소를 검색
	
	/*
	// 방법1)
	vd3 = document.getElementsByClassName('dv3');	//배열로 리턴함
	vd3[0].속성;	// 배열임
	
	// 방법2)
	vd3 = document.getElementsByClassName('dv3')[0];
	vd3.속성	// 배열 아님
	*/
	
	// 방법3)
	vd3 = document.querySelector('.dv3');	// 클래스가 여러개여도 첫번째꺼만 가져옴(배열아님)
	
	// 검색 요소에 text object를 추가
	vd3.appendchild(vtext);
}

</script>
