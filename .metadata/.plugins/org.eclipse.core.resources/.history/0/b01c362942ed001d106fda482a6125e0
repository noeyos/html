<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<link rel="stylesheet" href="../css/mystyle.css">
<script>
// 속성 
const rect = {
	garo : 5,
	sero : 3,
	
	getArea() {
		return this.garo * this.sero;
	},
	
	getCircum() {
		return (parseInt(this.garo) + parseInt(this.sero)) * 2;
	}
}


function proc1() {
	
	printObj('result1');
	
}


function printObj(result) {
	
	str = `가로: ${rect.garo} <br>`;
	str += `세로: ${rect.sero} <br>`;
	
	if(typeof rect.name != undefined) {
		str += `이름: ${rect.name} <br>`;	
	}
		
	
	str += `넓이: ${rect.getArea()} <br>`;
	str += `둘레: ${rect.getCircum()} <br>`;
	
	
	document.getElementById(result).innerHTML = str;
	
}


function proc2() {
	
	// 이름을 추가
	rect.name = "사각형";
	
	// 가로, 세로 입력
	rect.garo = prompt("가로입력");
	rect.sero = prompt("세로입력");
	
	// 출력
	printObj('result2');
	
}


</script>
</head>
<body>
	<div class="box">
		<h3>객체의 속성과 메소드를 동적으로 추가</h3>
		<h3>const rect = { }</h3>
		<h3>undefined 비교 - typeof를 이용하여 자료형 비교</h3>
		<input type="button" value="확인" onclick="proc1()">
		<div id="result1" class="result"></div>
	</div>
	
	<div class="box">
		<h3>객체의 속성과 메소드를 동적으로 추가</h3>
		<h3>const rect = { }</h3>
		<input type="button" value="확인" onclick="proc2()">
		<div id="result2" class="result"></div>
	</div>
</body>
</html>