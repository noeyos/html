<script>
function proc1() {
	
	// 검색
	vul = document.getElementsByTagName('ul')[0];
	vlist = vul.getElementsByTagName('li');
	
	res = "";
	
	for(i=0; i<vlist.length; i++) {
		res += vlist[i].firstChild.data + "<br>"
	}
	
	document.getElementById('result1').innerHTML = res;
}

function proc2() {
	// p 태그를 생성
	ptag = document.createElement('p');
	
	// 문자열 객체를 생성
	vtext = document.createTextNode("Hello~~");
	
	// p 태그에 문자열을 추가
	ptag.appendChild(vtext);
	
	// p 태그를 result2에 추가
	document.getElementById('result2').appendChild(ptag);
	
/* 	str = "<p>Hello</p>";
	document.getElementById('result2').innerHTML = str;
	 */
}

function proc3() {
	
	// ul 검색
	
	// li 검색 - 리턴
	
	for() {
		// li 문자열 가져오기
		// 변수 이미지 태그 생성 img 
		// 변수.src = 
		// 변수.alt =
		// li에 이미지 태그를 추가 - appendChild
	}
}

</script>

<style>
img {
	width: 50px;
	height: 50px;
}
