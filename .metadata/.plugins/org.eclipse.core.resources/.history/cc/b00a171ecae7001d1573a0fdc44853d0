<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<script>
function proc1() {
	let today = new Date();
	
	let day1 = today.toLocaleString();
	let day2 = today.toLoacleDateString();
	let day3 = today.toLocaleTimeString();
	
	// 출력 내용
	let str = "오늘은 " + today + "<br>";
	str += "우리는 " + day1 + "<br>";
	str += "날짜만 : " + day2 + "<br>";
	str += "시간만 : " + day3 + "<br>";
	
	
	// id가 res인 요소를 검색 - 출력
	document.querySelector('#res').innerHTML = str;
}

</script>
<body>
<input type="button" value="확인" onclick="proc1()">
<div id="res"></div>
</body>
</html>