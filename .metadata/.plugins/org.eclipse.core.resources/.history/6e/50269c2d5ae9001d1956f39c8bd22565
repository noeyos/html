<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<link rel="stylesheet" href="../css/mystyle.css">
<script>
proc3 = () => {
	
	sum = 0; // 누적변수
	sustr = "";
	
	while(true) {
		// 입력
		vinput = parseInt(prompt("숫자를 입력하세요"));
		
		
		// 입력값이 0이면 break;
		if(vinput == 0) break;
		
		
		// 아니면 입력값을 더한다
		sum += vinput;
		sustr += vinput + " ";
		
	}
	
	// 출력
	document.getElementById('result3').innerHTML = sum;
	
}
</script>
</head>
<body>
	<div class="box">
		<h3>입력한 숫자의 합</h3>

		<input type="button" value="확인" onclick="proc3()"> <br> <br>

		<div id="result3" class="result"></div>
	</div>
</body>
</html>