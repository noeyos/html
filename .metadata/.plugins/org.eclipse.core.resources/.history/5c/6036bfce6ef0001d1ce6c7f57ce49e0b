<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<link rel="stylesheet" href="../css/mystyle.css">
<script>
function proc1() {
	
	// 검색
	vul = document.getElementsByTagName('ul')[0];
	vlist = vul.getElementsByTagName('li');
	
	res = "";
	
	for(i=0; i<vlist.length; i++) {
		res += vlist[i].firstChild.data + "<br>"
	}
	
	document.getElementById('result1').innerHTML = res;
}

function proc2() {
	// p 태그를 생성
	ptag = document.createElement('p');
	
	// 문자열 객체를 생성
	vtext = document.createTextNode("Hello~~");
	
	// p 태그에 문자열을 추가
	ptag.appendChild(vtext);
	
	// p 태그를 result2에 추가
	document.getElementById('result2').appendChild(ptag);
	
/* 	str = "<p>Hello</p>";
	document.getElementById('result2').innerHTML = str;
	 */
}

function proc3() {
	
	// ul 검색
/* 	vul = document.getElementsByTagName('ul')[1]; */
	vul = document.getElementById('cimg');
	
	// li 검색 - 리턴
	list = vul.getElementsByTagName('li');
	
	// li 문자열 가져오기

	for(i=0; i<list.length; i++) {
		vdata = list[i].firstChild.data;
		
		// 이미지 태그 만들기
		vimg = document.createElement('img');
		vimg.src = "../images/" + vdata + ".jpg";
		vimg.alt = vdata;

		// li에 이미지 태그를 추가 - appendChild
		list[i].appendChild(vimg);
	}
	
}

</script>

<style>
img {
	width: 50px;
	height: 50px;
}
</style>
</head>
<body>
	<div class="box">
		<h3></h3>
		<ul>
			<li>list item1</li>
			<li>list item2</li>
			<li>list item3</li>
			<li>list item4</li>
			<li>list item5</li>
		</ul>
		<input type="button" value="확인" onclick="proc1()">
		<div id="result1" class="result"></div>
	</div>
	<div class="box">
		<h3>새로운 노드 추가</h3>
		createElement("태그이름")<br>
		createTextNode("문자열")<br>
		태그이름변수.appendChild(문자열변수)<br>
		
		<input type="button" value="확인" onclick="proc2()">
		<div id="result2" class="result"></div>
	</div>
	
	<div class="box">
		<h3>새로운 노드 추가</h3>
		이미지태그변수 = createElement("태그이름")<br>
		li.appendChild(이미지태그변수)<br>

		<input type="button" value="확인" onclick="proc3()">
		<div id="result3" class="result">
		<ul id="cimg">
			<li>딸기스무디</li>
			<li>수국</li>
			<li>펭귄</li>
			<li>코알라</li>
			<li>에스프레소</li>
		</ul>
		</div>
	</div>

	<div class="box">
		<h3>새로운 노드 추가</h3>
		이미지태그변수 = createElement("태그이름")<br>
		li.appendChild(이미지태그변수)<br>
		각 li 항목을 클릭했을 때 해당 항목의 이미지만 추가한다
	</div>
</body>
