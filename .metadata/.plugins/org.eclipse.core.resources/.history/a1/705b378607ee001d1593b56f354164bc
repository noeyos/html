<script>
const arr = ["사과", "바나나", "복숭아", "참외", "사과", "파인애플", "수박", "사과"];

function proc1() {
	// 찾는 과일 이름 입력
	fr = prompt("찾는 과일 입력");
	
	// 입력한 이름의 과일이 배열에서 몇번째 있는지 검사 - indexOf(과일이름)
	idx = arr.indexOf(fr);
	
	// 결과를 출력
	str = `찾는 과일 : ${fr} <br>`;
	
	if(idx < 0) {
		str += "배열에 존재하지 않습니다."	
	} else {
		str += `${idx}번째에 있습니다 <br>`;
	}

	
	document.getElementById('result1').innerHTML = str;
	

}

proc2 = function() {
	fr = prompt("입력");
	
	str = `찾는 과일 : ${fr} <br>`;
	
	idx = arr.lastIndexOf(fr);
	
	if(index == -1) {
		str += "배열에 존재하지 않습니다.";
	} else {
