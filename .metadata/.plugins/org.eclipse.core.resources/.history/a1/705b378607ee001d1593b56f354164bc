proc3 = () => {
	   
	// 입력
	fr=prompt("입력");
	   
	str = `찾는 과일 : ${fr} <br>`
	   
	flag = true;
	   
	idx = 0;
	//str = "";   //찾은 결과를 누적시키는 변수 0, 4, 7 번째
	while(true){
	   
		idx = arr.indexOf(fr, idx);  // idx = (사과, 0)
	      
	    if(idx == -1) {
	       break;
	    }   
	      
	    str += `${idx},  ` ;
	    idx ++;
	    flag = false;
	      
	}
	
	if (flag == false) {
		comma = str.lastIndexOf(",");
		str = str.slice(0, comma);
		str += `번째 있습니다`;
	} else {
		str += `없습니다`;
	}
	   
	document.getElementById('result3').innerHTML = str;

}

function proc4() {
	// 배열에 추가 - push(a, b, c...)
	console.log(arr);
	
	str = `원래 배열 ${arr} <br>`;
	
	arr.push("딸기", 100, 200);
	str += `추가후 배열 : ${arr}`;
	
	document.getElementById('result4').innerHTML = str;

	
}

proc5 = () => {
