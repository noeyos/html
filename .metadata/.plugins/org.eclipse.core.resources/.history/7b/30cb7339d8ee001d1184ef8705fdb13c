<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<link rel="stylesheet" href="../css/mystyle.css">
<script>
vstr = "대한민국 우리나라 좋은나라 대한민국";

proc1 = () => {
	sub = vstr.substring(1, 5); 
	res = "vstr.substring(1, 5)";
	printStr('result1');
}

proc2 = () => {
	sub = vstr.slice(5, 9);	// 5부터 9사이 (결과: "우리나라" 문자열)
	res = "vstr.slice(5, 9)";
	
	printStr('result2');
	
}

proc3 = () => {
	sub = vstr.substr(5, 4);	// 5부터 4개 (결과: "우리나라" 문자열)
	res = "vstr.substr(5, 4)";
	
	printStr('result3');
	
}

proc4 = () => {
	sub = vstr.split(" ");	// sub의 결과는 배열
	res = 'vstr.split(" ")';
	
	printStr('result4');
	
}

proc5 = () => {
	sub = vstr.slice(5, 9);
	res = "vstr.slice(5, 9)";
	
	printStr('result2');
	
}

proc6 = () => {
	sub = vstr.slice(5, 9);
	res = "vstr.slice(5, 9)";
	
	printStr('result2');
	
}

function printStr(result) {
	str = vstr + "<br>";
	str += res + " : " + sub + "<br>";
	document.getElementById(result).innerHTML = str;
}

</script>
</head>
<body>
	<div class="box">
		<h3>문자열추출</h3>

		<input type="button" value="substring" onclick="proc1()">
		<input type="button" value="slice" onclick="proc2()">
		<input type="button" value="substr" onclick="proc3()">
		<div id="result1" class="result"></div>
		<div id="result2" class="result"></div>
		<div id="result3" class="result"></div>
	</div>
	
	<div class="box">
		<h3>문자열 분리 후 배열로 전환</h3>

		<input type="button" value="substring" onclick="proc4()">
		<input type="button" value="slice" onclick="proc5()">
		<input type="button" value="substr" onclick="proc6()">
		<div id="result4" class="result"></div>
		<div id="result5" class="result"></div>
		<div id="result6" class="result"></div>
	</div>
</body>
