<script type="text/javascript">
function proc1() {
	// 두개의 수와 연산자를 입력
	let su1 = parseInt(prompt("정수1입력"));
	let su2 = parseInt(prompt("정수2입력"));
	
	let op = prompt("연산자 입력");
	
	let res = "";
	
	// 비교
	if(op == "+"){
		res = su1 + su2;
	} else if(op == "-") {
		res = su1 - su2;
	} else if(op == "*") {
		res = su1 * su2;
	} else if(op == "/") {
		res = su1 / su2;
	}
	
	// 출력 내용
	str = `${su1} ${op} ${su2} = ${res}`;
	
	// 출력
	document.querySelector('#result1').innerHTML = str;
	
}

function proc2() {
	
	// 입력
	user1 = prompt("첫번재 사람 입력");
	user2 = prompt("두번재 사람 입력");
	
	
	// 비교 
	if(user1 == user2) {
		
	} else if(user1 == "가위" && user2 == "보"   ||
			  user1 == "바위" && user2 == "가위" ||
			  user1 == "보") {
		
	}
	
	
	
	// 출력
	
}

</script>

</head>
<body>
<div class="box">
	<h3>prompt를 이용하여 2개의 수와 연산자를 입력한다</h3>
	<h3>연산자를 비교하여 계산 후 결과를 출력한다</h3>
	
	<input type="button" value="확인" onclick="proc1()">
	<br><br>
	<div id="result1" class="result"></div>
	
</div>

<div class="box">
	<h3>prompt를 이용하여 2개의 수와 연산자를 입력한다</h3>
	<h3>연산자를 비교하여 결과를 출력</h3>
	
	<input type="button" value="확인" onclick="proc2()">
	<br><br>
